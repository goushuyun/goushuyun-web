/**** 5 flex布局****/
/*引用flex布局*/
/* 5.1 横向排列*/
.direction-row {
  display: flex;
  flex-direction: row
}
/* 5.1.1 左对齐*/
.justify-start {
  display: flex;
  justify-content: flex-start
}
/* 5.1.2 右对齐*/
.justify-end {
  display: flex;
  justify-content: flex-end
}
/* 5.1.3 左右局中*/
.justify-center {
  display: flex;
  justify-content: center
}
/* 5.1.4 两端对齐*/
.justify-between {
  display: flex;
  justify-content: space-between;
}
/* 5.1.5 居中对齐*/
.justify-around {
  display: flex;
  justify-content: space-around;
}
/*自动换行*/
/* 5.1.6 首行在上*/
.wrap {
  display: flex;
  flex-wrap:wrap
}
/* 5.1.7 首行在下*/
.wrap-reverse {
  display: flex;
  flex-wrap:wrap-reverse
}

/* 5.2 纵向排列*/
.direction-column {
  display: flex;
  flex-direction: column
}
/* 5.2.1 上对齐*/
.align-start {
  display: flex;
  align-items: flex-start
}
/* 5.2.2 下对齐*/
.align-end {
  display: flex;
  align-items: flex-end
}
/* 5.2.3 上下局中*/
.align-center {
  display: flex;
  align-items: center
}
/* 5.2.4 首行对齐*/
.align-baseline {
  display: flex;
  align-items: baseline
}
/* 5.3 不压缩*/
.flex-shrink {
  flex-shrink: 0;
}
/**** 6 fixed布局****/
/*使用CSS的position属性的fixed值*/
/* 6.1 顶部*/
.head {
