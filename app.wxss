  top: 44px;
  bottom: 46px;
  left: 0;
  right: 0;
  background-color: #EFF3F7
}
/* 6.3 底部*/
.foot {
  box-sizing:border-box;
  position: fixed;
  bottom: 0;
  height: 46px;
  width: 100%;
  font-size: 16px;
  background-color: #FFFFFF;
