#body {
    /*z-index: 1;*/
    position: fixed;
    top: 0;
    bottom: 46px;
    left: 0;
    right: 0;
    background-color: #EFF3F7
}
.shop_name {
    margin-top: 15px;
    position: fixed;
    z-index: 2;
    height: 30px;
    line-height: 30px;
    width: 100px;
    background-color: #3C4860;
    color: #EDC3A4;
    font-size: 16px;
}
.shop_name text {
    margin-left: 25px;
}
.shop_logo {
    margin-top: 15px;
    position: fixed;
    z-index: 3;
    height: 40px;
}
.shop_logo image {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    margin-left: 85px;
}
/* 头像部分 */
#top{
    position: fixed;
    z-index: 2;
    width: 100%;
    display: flex;
    justify-content: center;
}

.head_img {
    border-radius: 50%;
    width: 52px;
    height: 52px;
    margin-top: 30px;
}

/* 订单信息 */
#order_info {
    position: flex;
    z-index: 1;
    top: 26px;
    left: 0;
    right: 0;
    background-color: white;
    border-bottom: 1px dashed #888888;
    margin-top: 60px;
}
#order_id {
    position: relative;
    bottom: -13px;
    border-radius: 10px;
    width: 100%;
    height: 26px;
    line-height: 26px;
    font-size: 12px;
    display: flex;
    justify-content: center;
}
.order_id {
    height: 26px;
    width: 60%;
    text-align: center;
    background-color: #EFF3F7;
    border-radius: 10px;
}
.header {
    height: 44px;
    line-height: 44px;
    font-size: 15px;
    font-weight: bold;
    padding: 0 20px;
    border-bottom: 1px solid #F4F3F3
}
.books {
    width: 100%;
    box-sizing: border-box;
    /*padding: 20px 0 20px 20px;*/
    display: flex;
    white-space: nowrap;
    padding: 18px 0;
}
.books .book {
    display: inline-block;
    width: 200rpx;
    padding-left: 10px;
    vertical-align: top;
}
.book_img {
    width: 200rpx;
    height: 266rpx;
    display: block;
    border-radius: 6px;
    padding: 2px 0;
}
.book_title {
    padding-top: 8px;
    display: block;
    font-size: 12px;
    color: #333;
    line-height: 16px;

    width: 100%;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-break: break-all;
    white-space: pre-wrap;
}
#fake_data {
    background-color: #FFFFFF;
    padding: 30px 10px 20px 10px;
    align-items: center;
    display: flex;
    justify-content: space-around;
    box-shadow: 0 1px 1px rgba(0, 0, 0, .1)
}
#fake_data .category_icon {
    position: relative;
    text-align: center;
}
#fake_data .category_name {
    padding: 10px 0;
    display: block;
    text-align: center;
    color: #888888;
}
#fake_data .icon_img {
    padding: 4px 0;
    width: 30px;
    height: 30px;
}
#foot {
    display: flex;
    align-items: center;
}
.buy_btn {
    width: 50%;
    height: 46px;
    line-height: 46px;
    text-align: center;
    font-weight: bold;
    box-sizing:border-box;
    color: #FFFFFF;
}
