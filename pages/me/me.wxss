}
.address_mag{
    color: white;
    font-size: 14px;
    line-height: 28px;
    text-align: right;
    box-sizing: border-box;
    padding: 6px 12px;
}
.head_img{
    border-radius: 50%;
    width: 52px;
    height: 52px;
    margin: 0 auto;
    display: block;
}

view.tabs{
    margin-top: 48rpx;
    display: flex;
    justify-content: space-around;
    font-size: 14px;
}
.tab{
    line-height: 42px;
    color: #7DCFFF;
    height: 42px;
    box-sizing: border-box;
}
.currentTab{
    border-bottom: 1px solid #FCFDFF;
    color: #FCFDFF;
}

