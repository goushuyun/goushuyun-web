<import src="order.wxml"/>

<view class="top">
    <navigator class="address_mag" hover-class="none">地址管理</navigator>
    <image class="head_img" src="{{avatar}}"/>

    <view class="tabs" >
        <view class="tab {{currentPage == index ? 'currentTab': ''}}" wx:for="{{tabs}}" data-index="{{index}}" bindtap="goToPage" wx:key="*this">{{item}}</view>
    </view>
</view>

<!-- orders list -->
<view id="container">
    <swiper current="{{currentPage}}" bindchange="pageChange" duration="300">
        <swiper-item>
            <scroll-view scroll-y="true" class="container" style="background-color: #EFF3F7;">
                <template is="order" data="{{orders: orders}}"></template>
            </scroll-view>
        </swiper-item>
        <swiper-item>
            <scroll-view class="container">
                <template is="order" data="{{orders: wait_pay_orders}}"></template>
            </scroll-view>
        </swiper-item>
        <swiper-item>
            <scroll-view class="container">
                <template is="order" data="{{orders: wait_send_orders}}"></template>
            </scroll-view>
        </swiper-item>
        <swiper-item>
            <scroll-view class="container">
                <template is="order" data="{{orders: wait_accept_orders}}"></template>
            </scroll-view>
        </swiper-item>
        <swiper-item>
            <scroll-view class="container">
                <template is="order" data="{{orders: accepted_orders}}"></template>
            </scroll-view>
        </swiper-item>
    </swiper>
</view>
