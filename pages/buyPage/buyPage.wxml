<view id="container">

    <view id="bookInfo">
        <image class="bookImage" src="{{goods[0].book.pic}}"></image>
        <view class="bookDetail">
            <text class="text_block title">{{goods[0].book.title}}</text>
            <text class="text_block publisher">出版社：{{goods[0].book.publisher}}</text>
            <text class="text_block author">     作者：{{goods[0].book.author}}</text>
            <text class="text_block isbn">   ISBN：{{goods[0].isbn}}</text>
            <text class="text_block price">原价：{{pre_price}}</text>
        </view>
    </view>

    <view class="buy_item" wx:for="{{goods}}">
        <view class="info">
            <text class="text_inline_block category">{{item.type == 1 ? '新书':'二手书'}}</text>
            <text class="text_inline_block discount">{{item.discount}}</text>
            <text class="text_inline_block store">库存{{item.amount}}本</text>
        </view>
        <view class="operate">
            <text class="selling_price">¥{{item.selling_price}}</text>
            <view class="btns">
                <view class="btn_reduce">
                    <image class="btn_img" src="/images/reduce.png"></image>
                </view>
                <input class="goods_number" type="number" maxlength="3" value="0"/>
                <view class="btn_plus">
                    <image class="btn_img" src="/images/add.png"></image>
                </view>
            </view>
        </view>
    </view>

    <view id="bottom_bar">
        <view class="shopcart_info">
            <view class="shopcart">
                <image src="/images/shopcart.png" class="shopcart_img"></image>
                <text class="total_num">1</text>
            </view>
            <text class="text_inline_block" style="padding-left:12px;">购物车总价：<text style="color: #FF5400">¥ 78.50</text></text>
        </view>

        <text class="text_inline_block go_shopcart_btn">去购物车结算</text>
    </view>

</view>
