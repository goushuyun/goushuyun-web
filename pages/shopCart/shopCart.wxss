.item-right {
  width: 100%;
}

/*左部图片*/
.carts-image {
  width: 58px;
  height: 73px;
  border-radius: 4px;
  box-shadow: 0 1px 1px rgba(0, 0, 0, .1);
}
.goods_number{
    border: 1px solid #efefef;
    border-radius: 4px;
    display: inline-block;
    width: 36px;
    height: 22px;
    box-sizing: border-box;
    font-size: 13px;
    text-align: center;
    margin: 0 12px;
}
.type{
    margin-left: 12px;
    font-size: 12px;
    padding: 1px;
}

.type_new{
    color: #F1501E;
    border: 1px solid #F1501E;
}
.type_old{
    color: #7CB342;
    border: 1px solid #7CB342;
}

#carts-footer{
    position: fixed;
    height: 46px;
    bottom: 0;
    width: 100%;
    background-color: white;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
#carts-footer .select-all {
  height: 100%;
  line-height: 46px;
  padding: 0 15px
}
#carts-footer .total-price {
  height: 100%;
  line-height: 46px;
}
#carts-footer .button {
  height: 100%;
  line-height: 46px;
  font-size: 13px;
  background-color: #1581D9;
  color: white;
  padding: 0 16px;
}
