@import "/wxSearch/wxSearch.wxss";

scroll-view#booksList{
    position: fixed;
    top: 44px;
    bottom: 0;
    background-color: #EFF3F7
}

scroll-view#booksList .book{
    display: flex;
    border-top: 1px solid #F4F3F3;
    padding: 12px 20px;
}
scroll-view#booksList .book .book_pic{
    display: inline-block;
    min-width: 80px;
    flex: 0;
    height: 112px;
    border-radius: 6px;
    box-shadow: 0 1px 1px rgba(0, 0, 0, .1);

}
scroll-view#booksList .book .book_info{
    padding-left: 18px;
    flex: 1;
}
.book {
  background-color: #FFFFFF
}
scroll-view#booksList .book .book_info .book_title{
    color: #232323;
    font-size: 16px;
    font-weight: bolder;
    line-height: 22px;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-break: break-all;
    white-space: pre-wrap;
}
scroll-view#booksList .book .book_info .book_author{
    color: #444;
    font-size: 14px;
    line-height: 22px;
    padding-bottom: 6px;
}

.book_subtitle, .book_publisher, .book_isbn{
    color: #888;
    font-size: 12px;
    line-height: 18px;
}
#hava_no_items{
  width: 100%;
  height: 300px
}
