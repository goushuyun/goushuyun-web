
.content{
    background-color: white;
    margin-top: 12px;

    box-shadow: 0 1px 1px rgba(0, 0, 0, .1);
}
view.input_group{
    padding: 0 16px;
    display: flex;
    align-items: center;
    height: 46px;
    font-size: 13px;
    border-bottom: 1px solid #f4f3f3
}
view.input_group label{
    width: 80px;
}
view.input_group input{
    /*padding-left: 16px;*/
    flex: 1;
}

view.address{
    justify-content: space-between;
}

view.address .address_operate{
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: flex-end;
}
view.address .address_operate .address_info{
    flex: 1;
    color: #555;
    text-align: right;
    padding-right: 16px;
}

image.right_arrow_icon{
    width: 16px;
    height: 16px;
}
