<view id="container">
    <view id="shopHead" class="margin">
        <image id="shopBack" src="/images/shopDetail/shop_bc.png"></image>
        <view class="head1">
            <image id="shopPic" src="{{shopImg}}"></image>
            <text id="shopName">{{shopName}}</text>
        </view>
    </view>
    <view id="shopInfo" class="margin back box-shadow">
        <view class="item">
            <label class="left">联系商家</label>
            <label class="center">点击右侧图标站内私信</label>
            <view><image class="right icon24" src="/images/shopDetail/message.png"></image></view>
        </view>
        <view class="item">
            <text class="left">客服电话</text>
            <text class="center">{{tell}}</text>
            <view><image class="right icon24" src="/images/shopDetail/tell.png" bindtap="callPhone"></image></view>
        </view>
        <view class="item">
            <text class="left">联系地址</text>
            <text class="center">{{address}}</text>
            <image class="right" src=""></image>
        </view>
    </view>
    <view id="shopDesc" class="margin back box-shadow">
        <text class="text_block title">商家介绍</text>
        <view class="content">{{description}}</view>
    </view>
</view>
