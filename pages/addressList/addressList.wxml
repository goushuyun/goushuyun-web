<scroll-view id="address-body" scroll-y="true" class="body">
  <view wx:for="{{addresses}}" class="align-center white-bc item border-top">
    <view class="image justify-center">
      <image wx:if="{{item.is_default}}" class="icon18" src="/images/shopCart/success.png"/>
    </view>
    <view class="text direction-column justify-start" bindtap="selectAddress" data-index="{{index}}">
      <view class="justify-start align-center">
        <text class="font16 font0">{{item.name}}</text>
        <text class="padding5 font16 font0">{{item.tel}}</text>
      </view>
      <view class="justify-start">
        <text class="font13 font5">{{item.address}}</text>
      </view>
    </view>
    <view class="image justify-center" bindtap="updataAddress" data-index="{{index}}">
      <image class="icon24" src="/images/edit.png"></image>
    </view>
  </view>
</scroll-view>

<view id="address-foot" class="foot justify-center align-center white-bc" bindtap="addAddress">
  <image class="btn_img btn_plus" src="/images/add.png"></image>
  <text class="padding-left10 font16">新增地址</text>
</view>
